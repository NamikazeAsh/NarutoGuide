<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/akat_bg"
    tools:context=".FillersFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:fontFamily="@font/montserrat"
        android:paddingTop="20dp"
        android:text="FILLERS"
        android:textColor="@color/white"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:paddingTop="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/guardianninja"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:paddingBottom="10dp"
                android:scaleType="fitStart"
                android:src="@drawable/and_guardianninja"
                android:onClick="c_guardianninja" />

            <ImageView
                android:id="@+id/threetails"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:paddingBottom="10dp"
                android:scaleType="fitStart"
                android:src="@drawable/and_threetails"
                android:onClick="c_threetails" />

            <ImageView
                android:id="@+id/sixtails"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:paddingBottom="10dp"
                android:scaleType="fitStart"
                android:src="@drawable/and_sixtails"
                android:onClick="c_sixtails" />

            <ImageView
                android:id="@+id/pastarc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:paddingBottom="10dp"
                android:scaleType="fitStart"
                android:src="@drawable/and_pastarc"
                android:onClick="c_pastarc" />

            <ImageView
                android:id="@+id/paradiseboat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:paddingBottom="10dp"
                android:scaleType="fitStart"
                android:src="@drawable/and_paradiselifeonboat"
                android:onClick="c_paradise" />

            <ImageView
                android:id="@+id/power"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:paddingBottom="10dp"
                android:scaleType="fitStart"
                android:src="@drawable/and_power"
                android:onClick="c_power" />

            <ImageView
                android:id="@+id/friendstracks"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:paddingBottom="10dp"
                android:scaleType="fitStart"
                android:src="@drawable/and_friendstrack"
                android:onClick="c_friendstracks" />

            <ImageView
                android:id="@+id/jiraiyahandbook"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:paddingBottom="60dp"
                android:scaleType="fitStart"
                android:src="@drawable/and_shinobihandbook"
                android:onClick="c_shinobihandbook" />



        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>